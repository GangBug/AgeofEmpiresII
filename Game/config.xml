<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Pathfinding Test</title>
    <organization>GangBug - UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <font>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12"/>
  </font>

  <uimanager>
    <atlas file="uimanager/atlas.png"/>
  </uimanager>
    
  <window>
    <resolution width="1024" height="576" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data</path>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

</config>